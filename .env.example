# Répertoires locaux
# "<Répertoire local>:<Répertoire NAS>"
BACKUP_PAIRS=(
    "$HOME/Downloads/*.jpg:Images/Fonds d'écran"
    "$HOME/dev/**/*:/volume1/Bordel Temporaire/Sauvegardes"
)